doctype html
html
  head
    style(type='text/css').
      body {
      padding-top: 60px;
      padding-bottom: 40px;
      padding-left: 20px;
      padding-right: 20px;
      }
    title= title
    
    link(rel='stylesheet', href='http://apps.bdimg.com/libs/bootstrap/3.3.0/css/bootstrap.min.css')
    
    meta(charset='utf-8',name='viewport')
  
  body
    ul.breadcrumb.navbar-fixed-top 
      li.active
        a(href='/index') 首页
      if(!user)
        li
          a(href='/login') 登录
        li
          a(href='/reg') 注册
      else
        li
          a(href='/logout') 退出
        li
          a(href='/u/'+user.name) #{user.name}
    if(success)
       .alert.alert-success
         p #{success}
    if(error)
       .alert.alert-danger
         p #{error}    

    block content
    hr
    footer
      p
        a(href='http://www.baidu.com/', target='_blank') BYmax
